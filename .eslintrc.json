{
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "env": {
      "commonjs": true, 
      "node": true,
      "es6": true
    },
    "rules": {
      "indent": ["error", 2, { "SwitchCase": 1 }],
      "linebreak-style": ["error", "windows"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"]
    }
  }